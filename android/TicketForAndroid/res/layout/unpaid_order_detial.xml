<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/top"/>
     <LinearLayout android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dp"
            android:id="@+id/start_station_layout"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_view"
            android:orientation="vertical">
            <TextView android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="#80000000"
                android:text="出发站"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/order_ticket_start_station"
                android:text="北京"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <ImageView android:layout_height="70dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/down_back_pressed"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:background="@drawable/text_view"
            android:id="@+id/end_station_layout"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
              <TextView android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="#80000000"
                android:text="终点站"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/order_ticket_end_station"
                android:text="广州"
                android:textSize="20sp"
                android:textStyle="bold"/>
         </LinearLayout>
    </LinearLayout>
     <ImageView android:layout_width="match_parent"
             android:layout_height="5dp"
             android:src="@drawable/biz_pc_account_line"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"/>
      <LinearLayout android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/datelayout"
         android:orientation="horizontal"
         android:clickable="true"
         android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
         android:background="@drawable/text_view">
         <TextView android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="match_parent"
             android:gravity="center"
             android:textColor="#80000000"
             android:text="车次"/>
         <TextView android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             />
         <TextView android:layout_width="0dp"
             android:layout_weight="3"
             android:layout_height="match_parent"
             android:gravity="center"
             android:id="@+id/order_ticket_moNum"
             
             android:textSize="20sp"
             android:textStyle="bold"
             android:text="G59"/>
     </LinearLayout>
     <ImageView android:layout_width="match_parent"
         android:layout_height="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:src="@drawable/biz_pc_account_line"/>
     <LinearLayout android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/datelayout"
         android:orientation="horizontal"
         android:clickable="true"
         android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
         android:background="@drawable/text_view">
         <TextView android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="match_parent"
             android:gravity="center"
             android:textColor="#80000000"
             android:text="出发日期"/>
         <TextView android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             />
         <TextView android:layout_width="0dp"
             android:layout_weight="3"
             android:layout_height="match_parent"
             android:gravity="center"
             android:id="@+id/order_ticket_date"
             android:textSize="20sp"
             android:textStyle="bold"
             android:text="2015-05-01"/>
     </LinearLayout>
     <ImageView android:layout_width="match_parent"
         android:layout_height="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:src="@drawable/biz_pc_account_line"/>
      <LinearLayout android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/datelayout"
         android:orientation="horizontal"
         android:clickable="true"
         android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
         android:background="@drawable/text_view">
         <TextView android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="match_parent"
             android:gravity="center"
             android:textColor="#80000000"
             android:text="出发时间"/>
         <TextView android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             />
         <TextView android:layout_width="0dp"
             android:layout_weight="3"
             android:layout_height="match_parent"
             android:gravity="center"
             android:id="@+id/order_ticket_time"
             android:textSize="20sp"
             android:textStyle="bold"
             android:text="10:50"/>
     </LinearLayout>
     <ImageView android:layout_width="match_parent"
         android:layout_height="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:src="@drawable/biz_pc_account_line"/>
      <LinearLayout android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/datelayout"
         android:orientation="horizontal"
         android:clickable="true"
         android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
         android:background="@drawable/text_view">
         <TextView android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="match_parent"
             android:gravity="center"
             android:textColor="#80000000"
             android:text="座位号"/>
         <TextView android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             />
         <TextView android:layout_width="0dp"
             android:layout_weight="3"
             android:layout_height="match_parent"
             android:gravity="center"
             android:id="@+id/order_ticket_seatNo"
             android:textSize="20sp"
             android:textStyle="bold"
             android:text="20"/>
     </LinearLayout>
     <ImageView android:layout_width="match_parent"
         android:layout_height="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:src="@drawable/biz_pc_account_line"/>
      <LinearLayout android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/datelayout"
         android:orientation="horizontal"
         android:clickable="true"
         android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
         android:background="@drawable/text_view">
         <TextView android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="match_parent"
             android:gravity="center"
             android:textColor="#80000000"
             android:text="售价"/>
         <TextView android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             />
         <TextView android:layout_width="0dp"
             android:layout_weight="3"
             android:layout_height="match_parent"
             android:gravity="center"
             android:id="@+id/order_ticket_price"
             android:textSize="20sp"
             android:textStyle="bold"
             android:text="56.0"/>
     </LinearLayout>
     <ImageView android:layout_width="match_parent"
         android:layout_height="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:src="@drawable/biz_pc_account_line"/>
        <LinearLayout android:layout_width="match_parent"
         android:layout_height="60dp"
         android:id="@+id/datelayout"
         android:orientation="vertical"
         android:clickable="true"
         android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
         android:background="@drawable/text_view">
         <LinearLayout android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">
             <TextView android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="match_parent"
             android:gravity="center"
             android:textColor="#80000000"
             android:text="乘客"/>
         <TextView android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             />
         <TextView android:layout_width="0dp"
             android:layout_weight="3"
             android:layout_height="match_parent"
             android:gravity="center"
             android:id="@+id/order_ticket_passengerName"
             android:textSize="20sp"
             android:textStyle="bold"
             android:text="北海"/>
         </LinearLayout>
           

     </LinearLayout>
 
  <LinearLayout 
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:orientation="horizontal">
         
      <Button android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          android:text="在线支付"
          android:id="@+id/unpaid_order_detial_payBtn"
          android:textColor="#ffffffff"
          android:background="@drawable/button_view"
          />
            <Button android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
          android:layout_height="wrap_content"
          android:id="@+id/unpaid_order_detial_cancelBtn"
          android:text="取消订单"
          android:textColor="#ffffffff"
          android:background="@drawable/button_view"
          />
  </LinearLayout>
</LinearLayout>
