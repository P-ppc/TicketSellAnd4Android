<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/main_top"/>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dp"
            android:id="@+id/start_station_layout"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_view"
            android:orientation="vertical">
            <TextView android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="#80000000"
                android:text="出发站"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/main_start_station"
                android:text="北京"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
            <ImageView android:layout_height="70dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/down_back_pressed"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:background="@drawable/text_view"
            android:id="@+id/end_station_layout"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
              <TextView android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="#80000000"
                android:text="终点站"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="广州"
                android:id="@+id/main_end_station"
                android:textSize="20sp"
                android:textStyle="bold"/>
         </LinearLayout>
    </LinearLayout>
     <ImageView android:layout_width="match_parent"
             android:layout_height="5dp"
             android:src="@drawable/biz_pc_account_line"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"/>
     <LinearLayout android:layout_width="match_parent"
         android:layout_height="40dp"
         android:id="@+id/datelayout"
         android:orientation="horizontal"
         android:clickable="true"
         android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
         android:background="@drawable/text_view">
         <TextView android:layout_width="0dp"
             android:layout_weight="2"
             android:layout_height="match_parent"
             android:gravity="center"
             android:textColor="#80000000"
             
             android:text="出发日期"/>
         <TextView android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"
             />
         <TextView android:layout_width="0dp"
             android:layout_weight="3"
             android:layout_height="match_parent"
             android:gravity="center"
            
             android:id="@+id/dateText"
             android:textSize="20sp"
             android:textStyle="bold"
             android:text="2015-05-01"/>
     </LinearLayout>
     <ImageView android:layout_width="match_parent"
         android:layout_height="5dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:src="@drawable/biz_pc_account_line"/>
     
     <Button android:layout_width="270dp"
         android:layout_height="50dp"
         android:layout_marginTop="30dp"
         android:background="@drawable/button_view"
         android:text="查询"
         android:textColor="#ffffffff"
         android:layout_gravity="center"
         android:id="@+id/queryBtn"/>
</LinearLayout>